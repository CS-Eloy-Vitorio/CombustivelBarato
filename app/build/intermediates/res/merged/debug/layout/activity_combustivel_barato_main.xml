<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.kmob.combustivelbarato.CombustivelBaratoMainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introducao"
		/>
         
    <EditText
        android:id="@+id/edt_valor_gasolina"   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/gasolina"
     	android:inputType="number|textNoSuggestions"
        />
    
    <EditText
        android:id="@+id/edt_valor_abastecido_gasolina"   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/valorabastecidogasolina"
     	android:inputType="number|textNoSuggestions"
        />
    
    <EditText
        android:id="@+id/edt_distancia_percorrida_gasolina"   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/kmpercorridogasolina"
     	android:inputType="number|textNoSuggestions"
        />
    
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introducao1" />   
         
    <EditText
        android:id="@+id/edt_valor_alcool"   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/alcool"
     	android:inputType="number|textNoSuggestions"
        />
    
    <EditText
        android:id="@+id/edt_valor_abastecido_alcool"   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/valorabastecidoalcool"
     	android:inputType="number|textNoSuggestions"
        />
    
    <EditText
        android:id="@+id/edt_distancia_percorrida_alcool"   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/kmpercorridoalcool"
     	android:inputType="number|textNoSuggestions"
        />
    
    
	<Button
	    android:id="@+id/btn_verificar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/verificar"
	    android:onClick="verificar"
	    />

	<Button
		android:id="@+id/btn_limpar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/limpar"
		android:onClick="limpar"
		/>

</LinearLayout>